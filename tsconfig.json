{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "moduleResolution": "Bundler",
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "src/web.ts",
    "src/interpreter.web.ts",
    "src/constants.web.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist/**/*",
    "dist/web/ide.ts",
    "src/cli.ts",
    "src/meow-js.ts"
  ]
}
